  build-depends:       base <5,
                       vector >=0.10 && <0.11,
                       bindings-DSL          
  build-tools:         hsc2hs
  default-language:    Haskell2010
  c-sources:           cbits/odepack.c
  include-dirs:        cbits
  extra-libraries:     f2c
